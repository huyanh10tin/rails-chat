<div class="comment" id="comment_<%= comment.id %>">
  <% if current_user %>
    <%= image_tag(comment.user.image_url_or_default, size: "30x30", style: "margin-right: 10px") %>
    <%= link_to "#{comment.user.name} ", profile_user_path(comment.user), style: "font-weight: bold" %>&nbsp
    <%= comment.body %>&nbsp

    <% if current_user.comments.include?(comment) %>
      <%= form_tag comment_path(comment), class: "form-delete-comment", method: :delete, remote: true do %>
      <%= image_submit_tag("X.png", class: "comment-destroy") %>
      <% end %>
    <% end %>
  <% end %>
</div>
<div>
  <%= form_tag toggle_like_path, method: :post, remote: true do %>
  <%= hidden_field_tag :comment_id, comment.id %>
    <div class="field">
      <div class="control">
        <button class="js-like-button-<%= comment.id %> button is-white <%= 'is-liked' if current_user.liking?(comment) %>" style="font-size: .5em">
          <%= icon("thumbs-o-up", "Like") %>
        </button>
      </div>
    </div>
  <% end %>
</div>
