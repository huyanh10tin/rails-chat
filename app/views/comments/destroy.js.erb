  $("#comments_<%= @parent %>").html("<%= @comment.parent.children.count %> Replies")
  console.log("@comment.id")
  $("#comment_<%= @comment.id %>").remove();


<% else %>
  $("#comment_<%= @comment.id %>").remove();
