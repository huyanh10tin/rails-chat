<% @conversations.each do |conversation| %>
  $('#my-conversations').append('<%= j render "conversation", conversation: conversation %>');
  $('.conversation').last().after('<%= j render "conversation_body", conversation: conversation %>');
<% end %>

<% if @conversations.next_page %>
  $('.pagination').replaceWith('<%= j paginate @conversations %>');
<% else %>
  $(window).off('scroll');
  $('.pagination').remove();
<% end %>
