<%= content_for :content do %>
<div class="columns conversations-main" style="overflow: hidden;">

  <div class="column is-one-quarter conversations-aside">
    <div id="my-conversations" class="conversations-list">
      <%= render @conversations %>
    </div>

    <div id="infinite-scrolling">
      <%= paginate @conversations %>
    </div>

  </div>
  <div class="column" style="border: 1px solid pink">
    <%= yield %>
  </div>
</div>
  <% end %>
<%= render file: "layouts/application" %>
