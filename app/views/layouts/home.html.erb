<%= content_for :content do %>
  <div class="columns">
    <div class="column is-2">
      <aside class="menu">
        <p class="menu-label"><%= link_to image_tag(current_user.image_url_or_default), profile_user_path(current_user) %></p>
        <ul class="menu-list">
          <li><%= link_to "Inbox", inbox_messages_path, class: "navbar-item" %></li>
          <%= link_to "Friends (#{current_user.friends.count})", friends_path, class: "navbar-item" %>
        </ul>
      </aside>

    </div>
    <div class="column is-10">
      <%= yield %>
    </div>
  </div>
<% end %>

<%= render file: "layouts/application" %>
