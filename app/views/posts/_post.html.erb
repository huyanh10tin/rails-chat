<div class="card" id="posts">
  <div class="card-content">
    <div class="media">
      <div class="media-left">
        <figure class="image is-48x48">
          <%= link_to image_tag(post.user.image_url_or_default), profile_user_path(post.user), style: "float: left" %>
        </figure>
      </div>
      <div class="media-content">
        <p class="title is-4"><%= link_to "#{post.user.titleize_name}: ", profile_user_path(post.user) %></p>
        <p class="subtitle is-6"><%= time_ago_in_words(post.created_at) %> ago</p>
      </div>
    </div>
    <div class="content" style="padding-bottom: 15px;">
      <%= post.body %>
    </div>
  </div>

  <footer class="card-footer">
    <a class="card-footer-item">Like</a>
    <a class="card-footer-item">Comment</a>
  </footer>
</div>

<div class="card is-multiline">
  <div class="card-content">
    <%= render post.comments %>
  </div>
</div>

<div class="card">
  <%= form_for post.comments.build, class: "form-comment" do |f| %>
  <%= f.hidden_field :user_id, value: current_user.id %>
  <%= f.hidden_field :post_id, value: post.id %>
    <div class="field has-addons">
      <%= f.text_field :body, class: "input", placeholder: "Comment..." %>
      <%= f.submit "Comment", class: "button is-primary", style: "margin-left: 15px; float: right" %>
    </div>
    <% end %>
</div>
