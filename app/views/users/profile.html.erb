<div class="columns">
  <div class="column is-3">
    <aside class="menu">
      <div class="field">
        <div class="control">
          <%= image_tag @user.image_url_or_default, size: "300x300" %>
        </div>
      </div>
      <ul class="menu-list">
        <li><%= @user.quote %></li>
        <li><%= @user.school %></li>
        <li><%= @user.position %></li>
        <li><%= @user.city + ", " + @user.state %></li>
      </ul>
    </aside>
  </div>
  <div class="column profile-column">
    <div class="header">
      <h1><%= @user.titleize_name %></h1>
    </div>
    <div class="body">
      <% if params[:id] == current_user.id %>
        <div class="field">
          <label class="label">What's on your mind?</label>
          <div class="control has-icons-left">
            <%= form_for @post do |f| %>
              <%= f.text_field :body, class: "input", placeholder: "I'm feeling..." %>
              <span class="icon is-small is-left">
                <i class="fa fa-comments"></i>
              </span>
            <% end  %>
          </div>
        </div>
      <% else  %>
        <%= render @posts %>
      <% end %>
    </div>
  </div>
</div>
